@model poject.Model.vmRequestedIncubation


@using (Html.BeginForm("SaveRequestedIncubation", "RequestIncubation", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.RequestedUser)
    @Html.HiddenFor(model => model.Status)
<div class="form-group">

    @Html.LabelFor(model => model.RequestedDescription, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.RequestedDescription, new
       {
           htmlAttributes = new
           {
               @class = "form-control",
               @required = "required",
               @multiple = "true",
                     @cols = "40",
       @rows = "5",
       @disabled="disabled"
           }
       })
    </div>

</div>
  

<div class="form-group">
    @Html.LabelFor(model => model.AttchedFile, htmlAttributes: new { @class = "control-label col-md-2" })
    <a id="lnkDownload" href="~/Incubations/DownloadFile?AttchedFile=@Model.ID" target="_blank"> Download </a>
    
        <div class="col-md-10">

        </div>

</div>
<div class="form-group">

    @Html.LabelFor(model => model.AdminComment, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.AdminComment, new
       {
           htmlAttributes = new
           {
               @class = "form-control",
               @required = "required",
               @multiple = "true",
                     @cols = "40",
       @rows = "5",
     
           }
       })
    </div>

</div>

<div class="modal-footer">
    @Html.ActionLink("Approve", "Approve", "Incubations",new { }, new { @class="btn btn-default",@id= "Approve" })
    @Html.ActionLink("Reject", "Reject", "Incubations", new { }, new { @class = "btn btn-default", @id = "Reject" })
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>
}