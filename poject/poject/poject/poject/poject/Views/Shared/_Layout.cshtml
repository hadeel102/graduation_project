<!DOCTYPE html>
<html>
<head>
    <style>
        .p3 {
            font-family: "Times New Roman", Times, serif;
            
        }

        
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="p3">
    
    <div  class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header"style="background-color: black;
        color: #0FF5F5"
         >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "DashBoard", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">

                    @if (Session["IsAdmin"] != null && (bool)Session["IsAdmin"] == true)
                    {
                        <li>@Html.ActionLink("Incubations", "Index", "Incubations")</li>
                        <li>@Html.ActionLink(" Product", "Index", "RequestedProducts")</li>
                        <li>@Html.ActionLink(" Service", "Index", "RequestedService")</li>
                        <li>@Html.ActionLink("History Transaction", "Index", "ActionHistory")</li>


                    }
                    else if (Session["UserInfo"] != null)
                    {
                        <li>@Html.ActionLink("Add product", "Index", "product")</li>
                        <li>@Html.ActionLink("Add Service", "Index", "Service")</li>
                        <li>@Html.ActionLink("Request Incubation", "Index", "RequestIncubation")</li>
                    }
                    @if (Session["UserInfo"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Index", "Login")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Login")</li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -H*B*R</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>

